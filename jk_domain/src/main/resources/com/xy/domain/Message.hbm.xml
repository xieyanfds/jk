<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.xy.domain">

	<class name="Message" table="MESSAGE_C" dynamic-insert="true"
		dynamic-update="true">
		<id name="id" column="MESSAGES_ID">
			<generator class="uuid" />
		</id>

		<property name="receive" column="RECEIVE" />
		<property name="receiveId" column="RECEIVE_ID" />

		<property name="createName" column="CREATE_NAME" />
		<property name="state" column="state" />
		<property name="messageTime" column="MESSAGE_TIME" />
		<property name="message" column="MESSAGE" />
		<property name="title" column="TITLE" />
		<property name="createBy" column="CREATE_BY" />
		<property name="createTime" column="CREATE_TIME" />
	</class>
</hibernate-mapping>