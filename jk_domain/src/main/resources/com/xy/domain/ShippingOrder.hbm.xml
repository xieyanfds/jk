<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.xy.domain">
	<!-- 配置类的映射 -->
	<class name="ShippingOrder" table="SHIPPING_ORDER_C">
		<!-- 1.配置主键生成策略 -->
		<id name="id" column="SHIPPING_ORDER_ID" type="string">
			<generator class="uuid"/>
		</id>

		<!-- 2.配置其他属性 -->
		<property name="order_type" column="ORDER_TYPE" type="string"/>
		<property name="shipper" column="SHIPPER" type="string"/>
		<property name="consignee" column="CONSIGNEE" type="string"/>
		<property name="notify_party" column="NOTIFY_PARTY" type="string"/>
		<property name="lc_no" column="LC_NO" type="string"/>
		<property name="port_of_loading" column="PORT_OF_LOADING" type="string"/>
		<property name="port_of_trans" column="PORT_OF_TRANS" type="string"/>
		<property name="port_of_discharge" column="PORT_OF_DISCHARGE" type="string"/>
		<property name="loading_date" column="LOADING_DATE" type="date"/>
		<property name="limit_date" column="LIMIT_DATE" type="date"/>
		<property name="is_batch" column="IS_BATCH" type="int"/>
		<property name="is_trans" column="IS_TRANS" type="int"/>
		<property name="copy_num" column="COPY_NUM" type="string"/>
		<property name="remark" column="REMARK" type="string"/>
		<property name="special_condition" column="SPECIAL_CONDITION" type="string"/>
		<property name="freight" column="FREIGHT" type="string"/>
		<property name="check_by" column="CHECK_BY" type="string"/>
		<property name="state" column="STATE" type="int"/>
		<property name="createBy" column="CREATE_BY" type="string"/>
		<property name="createDept" column="CREATE_DEPT" type="string"/>
		<property name="createTime" column="CREATE_TIME" type="date"/>

	</class>

</hibernate-mapping>