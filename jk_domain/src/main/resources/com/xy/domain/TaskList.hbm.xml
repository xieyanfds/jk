<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.xy.domain">
	<!-- 配置类的映射 -->
	<class name="TaskList" table="TASK_LIST_P" dynamic-insert="true" dynamic-update="true">
		<!-- 1.配置主键生成策略 -->
		<id name="id" column="TASK_LIST_ID">
			<generator class="uuid"/>
		</id>
		<!-- 2.配置其他属性 -->
		<property name="userId" column="USER_ID" type="string"/>
		<property name="pusherId" column="PUSHER_ID" type="string"/>
		<property name="content" column="CONTENT" type="string"/>
		<property name="pushDate" column="PUSH_DATE" type="date"/>
		<property name="endDate" column="END_DATE" type="date"/>
		<property name="state" column="STATE" type="double"/>
		<property name="pusherName" column="PUSHER_NAME" type="string"/>
		<property name="userName" column="USER_NAME" type="string"/>
		<property name="major" column="MAJOR" type="string"/>

	</class>

</hibernate-mapping>