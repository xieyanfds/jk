<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<constant name="struts.ui.theme" value="simple"/>
	<constant name="struts.devMode" value="true" />
	<constant name="struts.i18n.encoding" value="UTF-8" />

	<package name="default" namespace="/" extends="struts-default">
		<global-results>
			<result name="error">/WEB-INF/pages/error.jsp</result>
		</global-results>
		<global-exception-mappings>
			<exception-mapping result="error" exception="com.xy.exception.SysException"></exception-mapping>
			<exception-mapping result="error" exception="java.lang.Exception"></exception-mapping>
		</global-exception-mappings>
		
		<action name="login" method="login" class="loginAction">
			<result name="login">/WEB-INF/pages/sysadmin/login/login.jsp</result>
			<result name="success">/WEB-INF/pages/home/fmain.jsp</result>
		</action>
		<action name="logout" method="logout" class="loginAction">
			<result name="logout">/WEB-INF/pages/sysadmin/login/logout.jsp</result>
		</action>
		
		
		
		<action name="homeAction_*" method="{1}" class="homeAction">
			<result name="fmain">/WEB-INF/pages/home/fmain.jsp</result>
			<result name="title">/WEB-INF/pages/home/title.jsp</result>
			<result name="toleft">/WEB-INF/pages/${moduleName}/left.jsp</result>
			<result name="tomain">/WEB-INF/pages/${moduleName}/main.jsp</result>
		</action>

		<action name="shortcutAction_*" method="{1}" class="shortcutAction">
			<result name="alist" type="redirect">shortcutAction_list</result>
			<result name="plist">/WEB-INF/pages/sysadmin/shortcut/jShortcutList.jsp</result>
			<result name="pcreate">/WEB-INF/pages/sysadmin/shortcut/jShortcutCreate.jsp</result>
			<result name="pupdate">/WEB-INF/pages/sysadmin/shortcut/jShortcutUpdate.jsp</result>
			<result name="pview">/WEB-INF/pages/sysadmin/shortcut/jShortcutView.jsp</result>
		</action>

		<!-- 用户设定个人信息修改 -->
		<action name="ownUserAction_*" class="ownUserAction" method="{1}">
			<result name="update" type="redirectAction">login</result>
			<result name="login" type="redirectAction">login</result>
			<result name="toupdate">/WEB-INF/pages/user/userUpdate.jsp</result>
			<result name="error1">/WEB-INF/pages/user/error1.jsp</result>
			<result name="error2">/WEB-INF/pages/user/error2.jsp</result>
		</action>


		<!-- -->
		<action name="messageAction_*" class="messageAction" method="{1}">
			<result name="update" type="redirectAction">login</result>
			<result name="list" type="redirectAction">homeAction_tomain?moduleName=home</result>
		</action>

		<!-- 系统反馈 -->
		<action name="feedbackAction_*" method="{1}" class="feedbackAction">
			<result name="alist" type="redirect">feedbackAction_plist</result>
			<result name="plist">/WEB-INF/pages/feedback/jFeedbackListPage.jsp</result>
			<result name="pcreate">/WEB-INF/pages/feedback/jFeedbackCreate.jsp</result>
			<result name="pupdate">/WEB-INF/pages/feedback/jFeedbackUpdate.jsp</result>
			<result name="pview">/WEB-INF/pages/feedback/jFeedbackView.jsp</result>
		</action>

		<!-- 个人任务列表 -->
		<action name="workFlowAction_*" class="workFlowAction" method="{1}">
			<result name="list" type="redirectAction">list</result>
			<result name="plist">/WEB-INF/pages/workflow/jWorkFlowListPage.jsp</result>
			<result name="pview">/WEB-INF/pages/workflow/jWorkFlowView.jsp</result>
			<result name="pupdate">/WEB-INF/pages/workflow/jWorkFlowUpdate.jsp</result>
		</action>
		
	</package>

	<include file="struts2/struts-sysadmin.xml"></include>
	<include file="struts2/struts-cargo.xml"></include>
	<include file="struts2/struts-stat.xml"></include>
	<include file="struts2/struts-baseinfo.xml"></include>
</struts>
	